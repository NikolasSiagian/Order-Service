@model IEnumerable<OrderService.Models.Food>

@{
    Layout = "~/Views/Shared/_Layouts.cshtml";
    ViewData["Title"] = "Menu List";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Food List</h1>
</div>

<!-- Add Food Button -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabel Menu</h6>
    </div>
    <div class="card-body">
        <div class="row justify-content-start">
            <div class="col-md-6 mb-2 mb-md-0">
                <a href="@Url.Action("Create", "Food")" class="btn btn-sm btn-primary shadow-sm">
                    <i class="fas fa-plus fa-sm text-white-50"></i> Tambahkan Menu Baru
                </a>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive mt-3">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@item.Price.ToString("N0")</td> <!-- Format harga -->
                            <td class="text-left">
                                <a asp-action="Edit" asp-route-id="@item.FoodId" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.FoodId" class="btn btn-sm btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.FoodId" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
