@model OrderService.Models.Food

@{
    Layout = "~/Views/Shared/_Layouts.cshtml";
    ViewData["Title"] = "Food Details";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Detail Menu</h1>
</div>

<!-- Details Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Informasi Menu</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Nama Menu</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2">Harga(Rp)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
        </dl>
    </div>
    <div class="card-footer text-left">
        <a asp-action="Edit" asp-route-id="@Model?.FoodId" class="btn btn-warning btn-sm">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Kembali</a>
    </div>
</div>
